@page
@model WebCrawlerUI.Pages.LatestModel
@{
    ViewData["Title"] = "Latest Crawled Pages";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Latest Crawled Pages</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-info" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.LatestPages.Any())
    {
        <div class="row">
            @foreach (var item in Model.LatestPages)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@item.Title</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">
                                <a href="@item.Url" target="_blank">@item.Url</a>
                            </h6>

                            @if (item.NewsItems != null && item.NewsItems.Any())
                            {
                                <div class="mt-3">
                                    <h6>Haberler (@item.NewsItems.Count):</h6>
                                    <div class="list-group">
                                        @foreach (var newsItem in item.NewsItems.Take(3)) // Show only first 3 news items
                                        {
                                            <a href="@newsItem.Url" class="list-group-item list-group-item-action" target="_blank">
                                                @newsItem.Title
                                            </a>
                                        }
                                        @if (item.NewsItems.Count > 3)
                                        {
                                            <div class="list-group-item text-center text-muted">
                                                Ve @(item.NewsItems.Count - 3) haber daha...
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="card-text mt-3">
                                    @if (string.IsNullOrEmpty(item.Content))
                                    {
                                        <span class="text-muted">No content available</span>
                                    }
                                    else
                                    {
                                        <div style="white-space: pre-wrap; word-break: break-word; max-height: 150px; overflow-y: auto; font-size: 0.9rem;">
                                            @(item.Content.Length > 250 ? item.Content.Substring(0, 250) + "..." : item.Content)
                                        </div>
                                        <span class="badge bg-secondary">@item.Content.Length karakterler</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer text-muted">
                            <span class="badge bg-info text-white">@(item.NewsItems?.Count ?? 0) haberler</span>
                            <span class="float-end">Crawled on @item.CrawledAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-info" role="alert">
            Loading latest pages...
        </div>
    }

    <div class="text-center mt-4">
        <a asp-page="/Index" class="btn btn-primary">
            Back to Home
        </a>
    </div>
</div>