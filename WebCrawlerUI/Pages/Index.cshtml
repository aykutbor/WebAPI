@page
@model IndexModel
@{
    ViewData["Title"] = "Web Crawler";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Web Crawler</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Crawl a Web Page</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="UrlToCrawl" class="form-label">URL</label>
                            <input asp-for="UrlToCrawl" class="form-control" placeholder="https://example.com" required />
                            <div class="form-text">Try simple sites like example.com or httpbin.org/html first</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Crawl</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Search Crawled Content</h5>
                </div>
                <div class="card-body">
                    <form method="get">
                        <div class="mb-3">
                            <label asp-for="Query" class="form-label">Search Term</label>
                            <input asp-for="Query" class="form-control" placeholder="Enter search term..." required />
                        </div>
                        <button type="submit" class="btn btn-success">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.CrawledData != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Crawled Data</h5>
            </div>
            <div class="card-body">
                <h4>@Model.CrawledData.Title</h4>
                <p><strong>URL:</strong> <a href="@Model.CrawledData.Url" target="_blank">@Model.CrawledData.Url</a></p>
                <p><strong>Crawled At:</strong> @Model.CrawledData.CrawledAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                <div class="mt-3">
                    <h5>Content: <span class="badge bg-secondary">@(Model.CrawledData.Content?.Length ?? 0) characters</span></h5>
                    <div class="border p-3 bg-light">
                        @if (string.IsNullOrEmpty(Model.CrawledData.Content))
                        {
                            <p class="text-muted">No content was extracted from this URL. Try a different website or check the console logs.</p>
                        }
                        else
                        {
                            @* Calculate display content *@
                            string displayContent = "";
                            string wordLimitedContent = "";
                            int wordCount = 0;
                            @if (Model.CrawledData.Content.Length > 100)
                            {
                                displayContent = Model.CrawledData.Content.Substring(0, 100) + "...";
                            }
                            else
                            {
                                displayContent = Model.CrawledData.Content;
                            }
                            @* Calculate word limited content *@
                            string[] words = Model.CrawledData.Content.Split(' ');
                            wordCount = words.Length;
                            @if (words.Length > 15)
                            {
                                wordLimitedContent = string.Join(" ", words.Take(15)) + "...";
                            }
                            else
                            {
                                wordLimitedContent = Model.CrawledData.Content;
                            }
                            <div>
                                <strong>Character limited (100):</strong>
                                <p>@displayContent</p>
                            </div>
                            <div>
                                <strong>Word limited (15):</strong>
                                <p>@wordLimitedContent</p>
                            </div>
                            <p class="text-muted">
                                Content length: @Model.CrawledData.Content.Length characters,
                                Word count: @wordCount words
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.SearchResults.Any())
    {
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="mb-0">Search Results</h5>
            </div>
            <div class="card-body">
                <p>Found @Model.SearchResults.Count results for "@Model.Query"</p>
                @foreach (var result in Model.SearchResults)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@result.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <a href="@result.Url" target="_blank">@result.Url</a>
                            </h6>
                            <p class="card-text">
                                @if (string.IsNullOrEmpty(result.Content))
                                {
                                    <span class="text-muted">No content available</span>
                                }
                                else
                                {
                                    string displayResultContent = "";
                                    @if (result.Content.Length > 100)
                                    {
                                        displayResultContent = result.Content.Substring(0, 100) + "...";
                                    }
                                    else
                                    {
                                        displayResultContent = result.Content;
                                    }
                                <p>@displayResultContent</p>
                                <span class="badge bg-secondary">@result.Content.Length chars</span>
                                }
                            </p>
                            <div class="text-muted small">
                                Crawled on @result.CrawledAt.ToString("yyyy-MM-dd HH:mm:ss")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>